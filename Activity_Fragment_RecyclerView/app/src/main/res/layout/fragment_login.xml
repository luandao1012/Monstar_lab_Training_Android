<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="63dp"
    android:layout_marginEnd="63dp"
    android:orientation="vertical"
    tools:context=".fragments.login.LoginFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@font/raleway_black"
        android:gravity="center_horizontal"
        android:text="Welcome!"
        android:textColor="@color/brownish_grey_two"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/edt_email_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:background="@drawable/bg_edit_text_login"
        android:hint="Email"
        android:inputType="text"
        android:padding="18dp"
        android:paddingStart="22dp"
        android:textColor="@color/warm_grey_two"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/edt_password_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_edit_text_login"
        android:hint="Password"
        android:inputType="text"
        android:padding="18dp"
        android:paddingStart="22dp"
        android:textColor="@color/warm_grey_two"
        android:textSize="14sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_button_onboarding"
        android:fontFamily="@font/lato_black"
        android:text="LOGIN"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="15dp">

        <TextView
            android:id="@+id/tv_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/lato_light"
            android:text="Forgot Password?"
            android:textColorHint="@color/warm_grey_two"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_back_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="90dp"
            android:fontFamily="@font/lato_regular"
            android:text="Sign Up"
            android:textColorHint="@color/warm_grey_two"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="3dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_card_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="21dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/mastercard_2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semi_bold"
                android:text="Mastercard"
                android:textColor="#1b1b1b"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_card_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="****9889"
                android:textColor="#999999"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_show_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="11dp"
            android:src="@drawable/more_vert_black_18_dp" />

        <LinearLayout
            android:id="@+id/ll_option_cards"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@color/darkish_blue"
                android:padding="7dp"
                android:src="@drawable/create_black_18_dp_2" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@color/blue"
                android:padding="7dp"
                android:src="@drawable/delete_outline_black_18_dp" />

            <ImageView
                android:id="@+id/iv_clear_option"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@color/bright_blue"
                android:padding="7dp"
                android:src="@drawable/ic_clear" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
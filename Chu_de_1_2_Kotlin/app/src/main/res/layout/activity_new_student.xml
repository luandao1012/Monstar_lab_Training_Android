<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical"
    tools:context=".view.NewStudentActivity">

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/layout_search"
        android:hint="Tên"
        android:inputType="text"
        android:padding="8dp" />

    <EditText
        android:id="@+id/edt_yob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/layout_search"
        android:hint="Năm sinh"
        android:inputType="number"
        android:maxLength="4"
        android:padding="8dp" />

    <EditText
        android:id="@+id/edt_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/layout_search"
        android:hint="Số điện thoại"
        android:inputType="number"
        android:maxLength="10"
        android:padding="8dp" />

    <EditText
        android:id="@+id/edt_major"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/layout_search"
        android:hint="Chuyên ngành"
        android:inputType="text"
        android:padding="8dp" />

    <Spinner
        android:id="@+id/spinner_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/layout_search"
        android:entries="@array/type"
        android:padding="8dp" />

    <Button
        android:id="@+id/btn_add_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/layout_button_add"
        android:padding="10dp"
        android:text="Thêm sinh viên"
        android:textColor="#FFFFFF" />

</LinearLayout>